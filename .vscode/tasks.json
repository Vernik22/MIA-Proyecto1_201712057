{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "compilar c++",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: /usr/bin/g++"
		}
	]
}